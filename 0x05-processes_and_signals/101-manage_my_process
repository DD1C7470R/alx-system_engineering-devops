#!/usr/bin/env bash
# Write a script that manages the manage_my_process process:
# If "start" argument passed:
## Starts

#!/bin/bash

# Function to start manage_my_process
function start_process() {
    ./manage_my_process &
    echo $$ > /var/run/my_process.pid
    echo "manage_my_process started"
}

# Function to stop manage_my_process
function stop_process() {
    pid=$(cat /var/run/my_process.pid 2>/dev/null)
    if [ -n "$pid" ]; then
        kill "$pid"
        rm -f /var/run/my_process.pid
        echo "manage_my_process stopped"
     fi
}

# Function to restart manage_my_process
function restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

# Check for valid argument
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

